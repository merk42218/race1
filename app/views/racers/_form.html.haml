= form_for @racer do |f|
  - if @racer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@racer.errors.count, "")}неправильно заполненных полей:"
      %ul
        - @racer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :surname, "Фамилия"
    = f.text_field :surname
  .field
    = f.label :firstname, 'Имя'
    = f.text_field :firstname
  .field
    = f.label :bday, 'Дата рождения'
    = f.date_select :bday
  .field
    = f.label :country, 'Страна'
    = f.text_field :country
  .field
    = f.label :number_of_wins,'Количество побед'
    = f.number_field :number_of_wins
  .actions
    = f.submit 'Сохранить'
