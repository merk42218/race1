= form_for @calendar_of_the_championship do |f|
  - if @calendar_of_the_championship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@calendar_of_the_championship.errors.count, "")}неправильно заполненных полей:"
      %ul
        - @calendar_of_the_championship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gp_name, "Название гран-при"
    = f.text_field :gp_name
  .field
    = f.label :number, "Номер среди других гран-при"
    = f.text_field :number
  .field
    = f.label :race_date, "Дата проведения"
    = f.date_select :race_date
  .field
    = f.label :country, "Страна проведения"
    = f.text_field :country
  .field
    = f.label :location, "Место проведения"
    = f.text_field :location
  .actions
    = f.submit 'Сохранить'
